import java.util.Scanner;
class dowhile {
    public static void main(String[] args) {
        Scanner in=new Scanner(System.in);
        int n=in.nextInt();
        int ood=0;
        int i=1;
        do {
            if (i % 2 != 0)
                ood = ood + i;
                i++;

        }while (i <= n);
        System.out.println(ood);
    }
}
