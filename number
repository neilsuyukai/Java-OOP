import java.util.Scanner;

class num {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int x = sc.nextInt();
        sc.close();
        System.out.println(num(x));
    }
    static int num(int x){
            if(x==1)
                return 1;
            else
                return(num(x-1)+2*x-1);
    }
}
